<?xml version="1.0" encoding="UTF-8"?> 
<!-- reference: http://logback.qos.ch/manual/configuration.html -->
<configuration>
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender"> 
        <target>System.err</target>
        <encoder>
            <pattern>%date %level [%thread] %class %method [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDERR" />
    </root>
    
    <logger name="com.intel" level="DEBUG"/>
    <logger name="com.intel.dcsg.cpg.classpath" level="INFO"/>
    <logger name="com.intel.dcsg.cpg.extensions" level="INFO"/>

</configuration>
